<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
  <title>Landing Page</title>
</head>
<body class="bg-gray-50 text-gray-900">

  <!-- Header -->
  <header class="bg-blue-600 text-white">
    <nav class="container mx-auto flex items-center justify-between p-4">
      <h1 class="text-2xl font-bold">My Landing Page</h1>
      <ul class="flex space-x-4">
        <li><a href="#features" class="hover:underline">Features</a></li>
        <li><a href="#about" class="hover:underline">About</a></li>
        <li><a href="#contact" class="hover:underline">Contact</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="bg-blue-100 py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-extrabold mb-4">Welcome to Our Service</h2>
      <p class="text-lg text-gray-700 mb-6">Streamline your workflow with our amazing features.</p>
      <button class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 focus:ring focus:ring-blue-300">
        Get Started
      </button>
    </div>
  </section>

  <!-- Form Section -->
  <section class="container mx-auto py-10" id="contact">
    <h2 class="text-3xl font-bold mb-6 text-center">Contact Us</h2>
    <form class="bg-white shadow-lg rounded-lg p-8 max-w-lg mx-auto">
      <div class="grid gap-6 mb-6 md:grid-cols-2">
        <div>
          <label for="username" class="block mb-2 text-sm font-medium text-gray-700">Username</label>
          <input type="text" id="username" class="w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" placeholder="John Doe" required />
        </div>
        <div>
          <label for="email" class="block mb-2 text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" class="w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" placeholder="john.doe@example.com" required />
        </div>
      </div>
      <div class="mb-6">
        <label for="message" class="block mb-2 text-sm font-medium text-gray-700">Message</label>
        <textarea id="message" rows="4" class="w-full p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" placeholder="Write your message here..." required></textarea>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded-lg hover:bg-blue-700 focus:ring focus:ring-blue-300">
        Submit
      </button>
    </form>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>
</html>
