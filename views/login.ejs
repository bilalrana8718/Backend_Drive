<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./output.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    <title>Login</title>
</head>

<body class="bg-gray-900 text-gray-100 min-h-screen flex items-center justify-center">

    <!-- Login Form Container -->
    <div class="w-full max-w-sm bg-gray-800 rounded-lg shadow-lg p-6 mt-6">
        <h2 class="text-2xl font-bold text-white text-center mb-6">Welcome Back</h2>
        <form action="/users/login" method="post" class="space-y-6">
            <!-- Username Field -->
            <div>
                <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
                <input type="text" id="username" name="username"
                    class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-sm text-gray-100 placeholder-gray-400 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Enter your username" required />
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                <input type="password" id="password" name="password"
                    class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-sm text-gray-100 placeholder-gray-400 focus:ring-blue-500 focus:border-blue-500"
                    placeholder="•••••••••" required />
            </div>

            <!-- Submit Button -->
            <button type="submit"
                class="w-full py-3 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-500">
                Login
            </button>
        </form>
        <!-- Footer Text -->
        <p class="text-center text-gray-400 text-sm mt-6">
            Don't have an account? <a href="/users/register" class="text-blue-500 hover:underline">Sign up</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</body>

</html>
